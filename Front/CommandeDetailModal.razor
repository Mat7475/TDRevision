@using TDRevision.Models

<div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-file-text"></i> Détails de la Commande
                </h5>
                <button type="button" class="btn-close btn-close-white" @onclick="OnClose"></button>
            </div>
            <div class="modal-body">
                @if (Commande != null)
                {
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="text-muted small">ID Commande</label>
                                            <p class="fs-5 fw-bold mb-0">
                                                <i class="bi bi-hash text-primary"></i> @Commande.IdCommande
                                            </p>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="text-muted small">ID Utilisateur</label>
                                            <p class="fs-5 fw-bold mb-0">
                                                <i class="bi bi-person text-info"></i> @Commande.IdUtilisateur
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3 text-muted">
                                        <i class="bi bi-box-seam"></i> Article
                                    </h6>
                                    <p class="fs-4 mb-0">@(Commande.NomArticle ?? "Non spécifié")</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3 text-muted">
                                        <i class="bi bi-cash-coin"></i> Montant
                                    </h6>
                                    <p class="fs-3 fw-bold text-success mb-0">
                                        @(Commande.Montant ?? "0.00") €
                                    </p>
                                </div>
                            </div>
                        </div>

                        @if (Commande.CommandeNav != null)
                        {
                            <div class="col-12">
                                <div class="card border-0 bg-light">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-3 text-muted">
                                            <i class="bi bi-person-circle"></i> Informations Utilisateur
                                        </h6>
                                        <div class="row g-2">
                                            <div class="col-md-6">
                                                <small class="text-muted">Nom complet</small>
                                                <p class="mb-0">
                                                    @Commande.CommandeNav.Nom @Commande.CommandeNav.Prenom
                                                </p>
                                            </div>
                                            <div class="col-md-6">
                                                <small class="text-muted">Ville</small>
                                                <p class="mb-0">@Commande.CommandeNav.Ville</p>
                                            </div>
                                            <div class="col-12 mt-2">
                                                <small class="text-muted">Adresse</small>
                                                <p class="mb-0">
                                                    @Commande.CommandeNav.NumeroRue @Commande.CommandeNav.Rue<br />
                                                    @Commande.CommandeNav.CodePostal @Commande.CommandeNav.Ville
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Chargement...</span>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="OnClose">
                    <i class="bi bi-x-circle"></i> Fermer
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Commande? Commande { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }
}